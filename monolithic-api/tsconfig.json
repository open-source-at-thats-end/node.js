{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@libs/dynamic-app": [
        "libs/dynamic-app/src"
      ],
      "@libs/dynamic-app/*": [
        "libs/dynamic-app/src/*"
      ],
      "@libs/library-app": [
        "libs/library-app/src"
      ],
      "@libs/library-app/*": [
        "libs/library-app/src/*"
      ]
    }
  }
}