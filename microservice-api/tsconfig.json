{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    /*"module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,*/
    "esModuleInterop": true,
    //"isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@libs/library-app": [
        "libs/library-app/src"
      ],
      "@libs/library-app/*": [
        "libs/library-app/src/*"
      ],
      "@libs/dynamic-app": [
        "libs/dynamic-app/src"
      ],
      "@libs/dynamic-app/*": [
        "libs/dynamic-app/src/*"
      ]
    }
  }
}
